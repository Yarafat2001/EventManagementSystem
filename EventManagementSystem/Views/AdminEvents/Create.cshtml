@model EventManagementSystem.Models.Event
@{
    ViewData["Title"] = "Create Event";
}

<div class="form-container">
    <h1 class="text-center mb-4 text-white">Create New Event</h1>
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-floating mb-3">
            <input asp-for="Name" class="form-control" placeholder="Event Name" />
            <label asp-for="Name"></label>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <textarea asp-for="Detail" class="form-control" placeholder="Event Details" style="height: 100px"></textarea>
            <label asp-for="Detail"></label>
            <span asp-validation-for="Detail" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="StartAt" class="form-control" type="datetime-local" />
            <label asp-for="StartAt"></label>
            <span asp-validation-for="StartAt" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="VenueName" class="form-control" placeholder="Venue Name" />
            <label asp-for="VenueName"></label>
            <span asp-validation-for="VenueName" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <select asp-for="Category" asp-items="Html.GetEnumSelectList<EventManagementSystem.Enums.EventCategory>()" class="form-select"></select>
            <label asp-for="Category"></label>
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>
        <div class="d-grid gap-2 mt-4">
            <input type="submit" value="Create" class="btn btn-primary btn-lg" />
            <a asp-action="Index" class="btn btn-outline-light">Back to List</a>
        </div>
    </form>
</div>