@model EventManagementSystem.Models.Event
@{
    ViewData["Title"] = "Event Details";
}

<div class="container py-5 text-white">
    <h1>@Model.Name</h1>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Details</dt>
        <dd class="col-sm-10">@Model.Detail</dd>

        <dt class="col-sm-2">Start Time</dt>
        <dd class="col-sm-10">@Model.StartAt</dd>

        <dt class="col-sm-2">Venue</dt>
        <dd class="col-sm-10">@Model.VenueName</dd>

        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.Category</dd>
    </dl>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
        <a asp-action="Index" class="btn btn-outline-light">Back to List</a>
    </div>
</div>