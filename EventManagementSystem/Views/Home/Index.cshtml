@model IEnumerable<EventManagementSystem.Models.Event>

@{
    ViewData["Title"] = "Home Page";
}

@if (Model != null && Model.Any())
{
    <div class="text-center mb-5">
        <h1 class="display-4">Upcoming Events</h1>
        <p class="lead text-muted">Browse our collection of exciting upcoming events.</p>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 event-card">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@item.Name</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@item.StartAt.ToString("D")</h6>
                        <p class="card-text flex-grow-1">@item.Detail.Substring(0, Math.Min(item.Detail.Length, 100))...</p>
                        <a asp-controller="Events" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary mt-auto">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center p-5 my-5 empty-state">
        <h1 class="display-5">Welcome!</h1>
        <p class="lead text-muted">There are no events scheduled right now. Check back soon!</p>

        @if (User.IsInRole("Admin"))
        {
            <hr class="my-4">
            <p>You can create the first event for our community.</p>
            <a class="btn btn-primary btn-lg" asp-controller="AdminEvents" asp-action="Create">Create Event</a>
        }
    </div>
}